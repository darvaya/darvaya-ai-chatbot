# ========================
# Application Configuration
# ========================
NODE_ENV=development
PORT=3000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ========================
# Authentication
# ========================
# Generate a random secret: https://generate-secret.vercel.app/32 or `openssl rand -base64 32`
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# ========================
# Database
# ========================
# PostgreSQL connection string
# Format: postgresql://user:password@host:port/database_name
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/darvaya_ai?schema=public

# ========================
# Redis (Optional - for rate limiting, caching, etc.)
# ========================
REDIS_URL=redis://localhost:6379

# ========================
# Authentication Providers
# ========================
# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# ========================
# AI Services
# ========================
# OpenAI API Key (for AI features)
OPENAI_API_KEY=your_openai_api_key

# xAI API Key (alternative to OpenAI)
XAI_API_KEY=your_xai_api_key

# ========================
# Analytics
# ========================
# Google Analytics 4 Measurement ID
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# PostHog
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# ========================
# File Storage (AWS S3)
# ========================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET_NAME=your-bucket-name
# Optional: For S3-compatible services like DigitalOcean Spaces, Cloudflare R2, etc.
# AWS_ENDPOINT=https://your-endpoint.com
# AWS_FORCE_PATH_STYLE=true
# AWS_S3_PUBLIC_URL=https://your-cdn-url.com

# Sentry (Error Tracking)
SENTRY_DSN=your_sentry_dsn
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# ========================
# File Storage
# ========================
# For file uploads (if using S3 or compatible)
S3_ACCESS_KEY_ID=your_s3_access_key
S3_SECRET_ACCESS_KEY=your_s3_secret_key
S3_REGION=us-east-1
S3_BUCKET_NAME=your-bucket-name
S3_ENDPOINT=https://s3.amazonaws.com

# ========================
# Email Service (Optional)
# ========================
# Example for SendGrid
EMAIL_SERVER=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USER=apikey
EMAIL_PASSWORD=your_sendgrid_api_key
EMAIL_FROM=no-reply@yourdomain.com

# ========================
# Feature Flags (Optional)
# ========================
# Enable/disable features
FEATURE_CHAT=true
FEATURE_ANALYTICS=true
FEATURE_USER_ACCOUNTS=true
